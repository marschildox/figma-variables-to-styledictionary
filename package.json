{
  "name": "variables-github-action-example",
  "type": "module",

  "scripts": {
    /* lint & tests (sin cambios) */
    "prettier:check": "prettier --check src/",
    "test": "jest",

    /* sincronización Figma ↔ tokens */
    "sync-figma-to-tokens": "TS_NODE_PROJECT=tsconfig.json node --loader ts-node/esm src/sync_figma_to_tokens.ts",
    "sync-tokens-to-figma": "TS_NODE_PROJECT=tsconfig.json node --loader ts-node/esm src/sync_tokens_to_figma.ts",

    /* build Style Dictionary (carpeta/colección → modo.css) */
    "clean": "rimraf build",
    "build": "npm run clean && node build-tokens.cjs"
  },

  "dependencies": {
    "axios": "^1.6.0",
    "dotenv": "^16.3.1",
    "style-dictionary": "^3.8.0",
    "ts-node": "^10.9.1",
    "typescript": "^5.1.6"
  },

  "devDependencies": {
    "@figma/rest-api-spec": "^0.10.0",
    "@types/jest": "^29.5.3",
    "@types/node": "^20.4.5",
    "jest": "^29.6.2",
    "prettier": "3.0.0",
    "rimraf": "^5.0.5",
    "ts-jest": "^29.1.1"
  }
}
